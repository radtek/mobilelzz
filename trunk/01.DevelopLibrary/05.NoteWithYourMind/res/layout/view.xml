<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@android:id/tabhost"
android:layout_width="fill_parent"
android:layout_height="fill_parent">
	<LinearLayout
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/bg_tree"
	>
		<TabWidget
		android:id="@android:id/tabs"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    />
		<FrameLayout
		android:id="@android:id/tabcontent"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>
			<RelativeLayout
			android:id="@+id/memolist"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			>
				<LinearLayout
				style="@android:style/ButtonBar"
				android:id="@+id/memolistmenu"
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true">
						<Button
						android:id="@+id/B_view_memo_delete"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"		
						android:layout_gravity="center_vertical"
						android:text="删除"
						android:textSize="20sp"
						android:padding="3dip"
						android:gravity="center">
						</Button>
						<Button
						android:id="@+id/B_view_memo_move"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"	
						android:layout_gravity="center_vertical"
						android:text="移动"
						android:textSize="20sp"
						android:padding="3dip"
						android:gravity="center">
						</Button>
						<Button
						android:id="@+id/B_view_memo_cancel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"	
						android:layout_gravity="center_vertical"
						android:text="取消"
						android:textSize="20sp"
						android:padding="3dip"
						android:gravity="center"
						android:visibility="gone">
						</Button>
				</LinearLayout>
				<ListView 
				android:id="@+id/listviewmemo"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" 
				android:layout_centerHorizontal="true"
				android:listSelector="@drawable/listitem_bk" 
				android:layout_above="@id/memolistmenu"
				/>
			</RelativeLayout>
			<RelativeLayout
			android:id="@+id/remindlist"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			>
				<TableLayout 
				android:id="@+id/remindlistmenu"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:stretchColumns="*">   
					<TableRow>
						<Button
						android:id="@+id/B_view_remind_return"
						android:text="返回"
						android:textSize="20sp"
						android:padding="3dip"
						android:gravity="center">
						</Button>
						<Button
						android:id="@+id/B_view_remind_new"
						android:text="新建"
						android:textSize="20sp"
						android:padding="3dip"
						android:gravity="center">
						</Button>
						<Button
						android:id="@+id/B_view_remind_delete"
						android:text="删除"
						android:textSize="20sp"
						android:padding="3dip"
						android:gravity="center">
						</Button>
					</TableRow>
				</TableLayout>
				<ListView
				android:id="@+id/listviewremind"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" 
				android:layout_above="@id/remindlistmenu"
				>
				</ListView>
			</RelativeLayout>
		</FrameLayout>
	</LinearLayout>
</TabHost>
