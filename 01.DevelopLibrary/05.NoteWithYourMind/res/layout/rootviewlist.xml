<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/rootviewlist"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/background">
	<LinearLayout
	style="@android:style/ButtonBar"
	android:id="@+id/rootviewlist_toolbar"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true">
		<Button
			android:id="@+id/rootviewlist_toolbar_search"
			style="@style/ToolBarButton"
			android:text="搜索">
		</Button>
		<Button
			android:id="@+id/rootviewlist_toolbar_newfolder"
			style="@style/ToolBarButton"
			android:text="新建文件夹">
		</Button>
		<Button
			android:id="@+id/rootviewlist_toolbar_newnote"
			style="@style/ToolBarButton"
			android:text="新建便签">
		</Button>
		<Button
			android:id="@+id/rootviewlist_toolbar_more"
			style="@style/ToolBarButton"
			android:text="更多">
		</Button>
		<Button
			android:id="@+id/toolbar_delete"
			style="@style/ToolBarButton"
			android:text="删除"
			android:visibility="gone">
		</Button>
		<Button
			android:id="@+id/toolbar_move"
			style="@style/ToolBarButton"
			android:text="移动"
			android:visibility="gone">
		</Button>
		<Button
			android:id="@+id/toolbar_cancel"
			style="@style/ToolBarButton"
			android:text="取消"
			android:visibility="gone">
		</Button>
	</LinearLayout>
	<ListView 
		android:id = "@+id/rootviewlist_list"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_above="@id/rootviewlist_toolbar"
	/>
</RelativeLayout>
