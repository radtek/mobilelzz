<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget28"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>

	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
		<TextView
		android:id="@+id/widget31"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="设置提醒"
		>
		</TextView>
	</LinearLayout>

<!--   "设置提醒" Text的Layout   --> 

	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
		<TextView
		android:id="@+id/widget40"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="时间"
		>
		</TextView>
	</LinearLayout>

<!--   "时间" Text的Layout   --> 

		<RadioGroup 
				android:id="@+id/timeRadioButton"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">

			<RadioButton
			android:id="@+id/TimeSetting"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="设定时间"
			>
			</RadioButton>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				>
						<TextView
						android:id="@+id/Time_txt"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="5"
						android:layout_marginLeft="20px"
						>
						</TextView>
						<Button
						android:id="@+id/TimeSettingBtnImg"
						android:layout_width="40px"
						android:layout_height="wrap_content"
						android:text="修改"
						android:layout_weight="1"
						android:visibility="gone"
						>
						</Button>
						
			</LinearLayout>	

			<RadioButton
			android:id="@+id/daojishi"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="设定倒计时"
			>
			</RadioButton>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
				android:id="@+id/daojishiTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="5"
				android:layout_marginLeft="20px"
				>
				</TextView>
				<Button
				android:id="@+id/daojishiBtnImg"
				android:layout_width="40px"
				android:layout_height="wrap_content"
				android:text="修改"
				android:layout_weight="1"
				android:visibility="gone"
				>
				</Button>						
			</LinearLayout>			
		</RadioGroup>
<!--   RadioGroup   --> 


	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
		<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="日期"
		>
		</TextView>
	</LinearLayout>
<!--   日期设定开始   --> 
		<RadioGroup 
				android:id="@+id/dateRadioButton"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">

			<RadioButton
			android:id="@+id/OnceRemind"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="提醒一次"
			>
			</RadioButton>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				>
				<TextView
				android:id="@+id/OnceText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="5"
				android:layout_marginLeft="20px"
				>
				</TextView>
				<Button
				android:id="@+id/OnceRemindImg"
				android:layout_width="40px"
				android:layout_height="wrap_content"
				android:text="修改"
				android:layout_weight="1"
				android:visibility="gone"
				>
				</Button>
			</LinearLayout>	
			<RadioButton
			android:id="@+id/EveryWeek"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="每周提醒"
			>
			</RadioButton>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			>
			<TextView
					android:id="@+id/MonTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周一"
					android:layout_weight="1"
					android:layout_marginLeft="20px"
					>
					</TextView>
					<TextView
					android:id="@+id/TusTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周二"
					android:layout_weight="1"
					>
					</TextView>
					<TextView
					android:id="@+id/WedTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周三"
					android:layout_weight="1"
					>
					</TextView>
					<TextView
					android:id="@+id/ThrTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周四"
					android:layout_weight="1"
					>
					</TextView>
					<TextView
					android:id="@+id/FriTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周五"
					android:layout_weight="1"
					>
					</TextView>
					<TextView
					android:id="@+id/SatTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周六"
					android:layout_weight="1"
					>
					</TextView>
					<TextView
					android:id="@+id/SunTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周日"
					android:layout_weight="1"
					>
					</TextView>
			</LinearLayout>	
			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			>
				<Button
					android:id="@+id/EveryWeekImg"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="修改"
					android:visibility="gone"
					android:layout_alignParentRight="true"
					>
				</Button>
			</RelativeLayout>	
		</RadioGroup> 

<!--   日期设定结束   --> 

	<RelativeLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
		<Button
		android:id="@+id/CancelBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="取消"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		>
		</Button>
		<Button
		android:id="@+id/OKBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="确定"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		>
		</Button>
	</RelativeLayout>
</LinearLayout>
