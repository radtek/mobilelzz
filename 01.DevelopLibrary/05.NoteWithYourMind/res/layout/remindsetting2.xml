<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget28"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>

<!--   "设置提醒" Text的Layout   --> 

	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
		<TextView
		android:id="@+id/widget40"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="时间"
		>
		</TextView>
	</LinearLayout>

<!--   "时间" Text的Layout   --> 

		<RadioGroup 
				android:id="@+id/timeRadioButton"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				>

			<RadioButton
			android:id="@+id/TimeSetting"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="时间点设定 "
			>
			</RadioButton>
			<LinearLayout
				android:id="@+id/timeLayout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				>
						<TextView
						android:id="@+id/Time_txt"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="5"
						android:layout_marginLeft="20px"
						>
						</TextView>
						
			</LinearLayout>	

			<RadioButton
			android:id="@+id/daojishi"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5.0dip" 
			android:text="倒计时设定 "
			>
			</RadioButton>
			<LinearLayout
				android:id="@+id/countDownLayout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
				android:id="@+id/daojishiTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="5"
				android:layout_marginLeft="20px"
				>
				</TextView>					
			</LinearLayout>			
		</RadioGroup>
<!--   RadioGroup   --> 


	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
		<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="日期"
		>
		</TextView>
	</LinearLayout>
<!--   日期设定开始   --> 
		<RadioGroup 
				android:id="@+id/dateRadioButton"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">

			<RadioButton
			android:id="@+id/OnceRemind"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="单次设定 "
			>
			</RadioButton>
			<LinearLayout
				android:id="@+id/dateLayout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				>
				<TextView
				android:id="@+id/OnceText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="5"
				android:layout_marginLeft="20px"
				>
				</TextView>
			</LinearLayout>	
			<RadioButton
			android:id="@+id/EveryWeek"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5.0dip" 
			android:text="循环设定 "
			>
			</RadioButton>
			<LinearLayout
				android:id="@+id/weekLayout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			>
			<TextView
			
					android:id="@+id/MonTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周一"
					android:layout_weight="1"
					android:layout_marginLeft="20px"
					>
					</TextView>
					<TextView
					android:id="@+id/TusTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周二"
					android:layout_weight="1"
					>
					</TextView>
					<TextView
					android:id="@+id/WedTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周三"
					android:layout_weight="1"
					>
					</TextView>
					<TextView
					android:id="@+id/ThrTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周四"
					android:layout_weight="1"
					>
					</TextView>
					<TextView
					android:id="@+id/FriTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周五"
					android:layout_weight="1"
					>
					</TextView>
					<TextView
					android:id="@+id/SatTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周六"
					android:layout_weight="1"
					>
					</TextView>
					<TextView
					android:id="@+id/SunTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="周日"
					android:layout_weight="1"
					>
					</TextView>
			</LinearLayout>	
		</RadioGroup> 

<!--   日期设定结束   --> 

	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	>
		<CheckBox
		android:id="@+id/RingCB"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="响铃"
		>
		</CheckBox>
		<CheckBox
		android:id="@+id/VibrateCB"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="震动"
		>
		</CheckBox>
	</LinearLayout>
	<RelativeLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
		<Button
		android:id="@+id/DisableBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="停用"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		>
		</Button>
		<Button
		android:id="@+id/OKBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="启用"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		>
		</Button>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/rootviewlist_toolbar"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@drawable/background_toolbar">
		<ImageButton
			android:id="@+id/rootviewlist_toolbar_search"
			style="@style/ToolBarButton"
			android:src="@drawable/toolbar_search"/>
		<ImageButton
			android:id="@+id/rootviewlist_toolbar_newfolder"
			style="@style/ToolBarButton"
			android:src="@drawable/toolbar_newfolder"/>
		<ImageButton
			android:id="@+id/rootviewlist_toolbar_newnote"
			style="@style/ToolBarButton"
			android:src="@drawable/toolbar_newnote"/>
		<ImageButton
			android:id="@+id/rootviewlist_toolbar_more"
			style="@style/ToolBarButton"
			android:src="@drawable/toolbar_more"/>
		<ImageButton
			android:id="@+id/toolbar_delete"
			style="@style/ToolBarButton"
			android:src="@drawable/toolbar_delete"
			android:visibility="gone"/>
		<ImageButton
			android:id="@+id/toolbar_move"
			style="@style/ToolBarButton"
			android:src="@drawable/toolbar_move"
			android:visibility="gone"/>
		<ImageButton
			android:id="@+id/toolbar_cancel"
			style="@style/ToolBarButton"
			android:src="@drawable/toolbar_cancel"
			android:visibility="gone"/>
	</LinearLayout>
</LinearLayout>
