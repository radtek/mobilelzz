<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/main"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<CheckBox
android:id="@+id/CB_main_IsEncode"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="加密"
android:textSize="22sp"
android:layout_marginLeft="10dip"
android:layout_marginTop="10dip"
>
</CheckBox>
<CheckBox
android:id="@+id/CB_main_IsWarning"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="提醒我"
android:textSize="22sp"
android:layout_alignParentRight="true"
android:layout_marginRight="10dip"
android:layout_alignTop="@id/CB_main_IsEncode"
>
</CheckBox>
<Button
android:id="@+id/B_main_Exit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="退出"
android:textSize="22sp"
android:layout_marginLeft="10dip"
android:layout_alignParentBottom="true"
android:layout_marginBottom="10dip"
>
</Button>
<Button
android:id="@+id/B_main_Save"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="保存"
android:textSize="22sp"
android:layout_alignParentRight="true"
android:layout_marginRight="10dip"
android:layout_alignTop="@id/B_main_Exit"
>
</Button>
<Button
android:id="@+id/B_main_View"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="查看"
android:textSize="22sp"
android:layout_toRightOf="@id/B_main_Exit"
android:layout_toLeftOf="@id/B_main_Save"
android:layout_alignTop="@id/B_main_Exit"
android:layout_centerHorizontal="true"
android:layout_marginRight="20dip"
android:layout_marginLeft="20dip"
>
</Button>
<EditText
android:id="@+id/ET_main_Memo"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:hint="请输入内容"
android:textSize="22sp"
android:gravity = "top"
android:layout_below="@id/CB_main_IsEncode"
android:layout_above="@id/B_main_Exit"
android:layout_marginRight="10dip"
android:layout_marginLeft="10dip"
android:layout_marginTop="10dip"
android:layout_marginBottom="10dip"
>
</EditText>
</RelativeLayout>

