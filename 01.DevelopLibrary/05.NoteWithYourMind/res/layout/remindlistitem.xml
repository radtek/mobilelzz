<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
							android:id="@+id/memolist"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							xmlns:android="http://schemas.android.com/apk/res/android"
						>
							<TextView 
	                android:id="@+id/textview1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" 
	                android:text="this is memo"
	                android:layout_alignParentTop="true"  />
	            <Button
							android:id="@+id/B_view_memo_return"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="返回"
							android:textSize="20sp"
							android:layout_marginLeft="10dip"
							android:layout_alignParentBottom="true"
							android:layout_marginBottom="2dip"
							>
							</Button>
							<Button
							android:id="@+id/B_view_memo_delete"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="删除"
							android:textSize="20sp"
							android:layout_alignParentRight="true"
							android:layout_marginRight="2dip"
							android:layout_alignTop="@id/B_view_memo_return"
							>
							</Button>
							<Button
							android:id="@+id/B_view_memo_new"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="新建"
							android:textSize="20sp"
							android:layout_toRightOf="@id/B_view_memo_return"
							android:layout_alignTop="@id/B_view_memo_return"
							android:layout_marginLeft="3dip"
							>
							</Button> 
							<Button
							android:id="@+id/B_view_memo_movein"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="移入文件夹"
							android:textSize="20sp"
							android:layout_toRightOf="@id/B_view_memo_new"
							android:layout_toLeftOf="@id/B_view_memo_delete"
							android:layout_alignTop="@id/B_view_memo_return"
							android:layout_centerHorizontal="true"
							android:layout_marginRight="3dip"
							android:layout_marginLeft="3dip"
							>
							</Button> 
						</RelativeLayout>
						<RelativeLayout
							android:id="@+id/warninglist"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							xmlns:android="http://schemas.android.com/apk/res/android"
						>
							<TextView 
	                android:id="@+id/textview1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" 
	                android:text="this is warning"
	                android:layout_alignParentTop="true"  />
	            <Button
							android:id="@+id/B_view_warning_return"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="返回"
							android:textSize="22sp"
							android:layout_marginLeft="10dip"
							android:layout_alignParentBottom="true"
							android:layout_marginBottom="10dip"
							>
							</Button>
							<Button
							android:id="@+id/B_view_warning_delete"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="删除"
							android:textSize="22sp"
							android:layout_alignParentRight="true"
							android:layout_marginRight="10dip"
							android:layout_alignTop="@id/B_view_warning_return"
							>
							</Button>
							<Button
							android:id="@+id/B_view_warning_new"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="新建"
							android:textSize="22sp"
							android:layout_toRightOf="@id/B_view_warning_return"
							android:layout_toLeftOf="@id/B_view_warning_delete"
							android:layout_alignTop="@id/B_view_warning_return"
							android:layout_centerHorizontal="true"
							android:layout_marginRight="20dip"
							android:layout_marginLeft="20dip"
							>
							</Button> 						
						</RelativeLayout>
    	</FrameLayout>
    </LinearLayout>
</TabHost>
