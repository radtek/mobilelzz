<request>   
	<unique id></unique id>//client make it,server return the result file by name the file of this id
	<data type = "sms">
		<operation type = "list">
			<condition name = "sort" value = "time"></condition>
		</operation>
		<operation type = "list">
			<condition name = "unread"></condition>
			<condition name = "contactor" value = "id"></condition>
			<condition name = "decode" value = "code"></condition>
		</operation>
		
		<operation type = "detail">
			<id></id>
			<decode></decode>
		</operation>
		
		<operation type = "search">
			<condition name = "keyword" value = "love"></condition>
			<condition name = "pid" value = "2"></condition>
			<condition name = "type" value = "0"></condition>
			<condition name = "beforetime" value = "1234123"></condition>
			<condition name = "aftertime" value = "1230984"></condition>
			<condition name = "betweentime" value = "beforetime+aftertime"></condition>
		</operation>
		
		<operation type = "add">
			<type></type>//发送给别人的短信，Type为1，收到别人的短信，Type为0
			<content></content>
			<address></address>//该值必须有内容
			<lockstatus>0</lockstatus>//不锁定为0，锁定为1,可以不设置，默认为0
			<readstatus>0</readstatus>//未读为0，已读为1；如果Type为1，该值默认为1；如果Type为0，该值默认为0
		</operation>
		
		<operation type = "delete" kind = "all/sids">		
			<sid></sid>
			<sid></sid>
			<sid></sid>
			<sid></sid>
		</operation>
		
		<operation type = "edit" kind = "protectdata\sms">
			<sms>
				<sid></sid>//server make it,client get it by list info
				<readstatus></readstatus>
				<lockstatus></lockstatus>
			</sms>
			<protectdata kind = "add\edit\delete">
				<pid></pid>
				<code></code>		// for add edit delete	
				<newcode></newcode>	// for edit	
			</protectdata>
		</operation>
	</data>
	
	<data type = "contactors">
		<operation type = "list" kind = "phoneno">
			<condition name = "sort" value = "name"></condition>
		</operation>
		<operation type = "add">
			<id></id>
			<content>
				<basicinfo>
					<name></name>
					<ring></ring>
					<birthday></birthday>
					<icon></icon>
				</basicinfo>
				<phone>
					<default>key-id</default>
					<key value = ""></key>
				</phone>
				<function>
					<notifybirthday></notify birthday>
					<notifymiss></notifymiss>
				</function>
			</content>
		</operation>
		<operation type = "delete" kind = "phoneno">
			<id></id>
			<key>key-id</key>
		</operation>
		<operation type = "edit">
			<id></id>//server make it,client get it by list info
			<content>
				<basicinfo>
					<name></name>
					<ring></ring>
					<birthday></birthday>
					<icon></icon>
					<group></group>
				</basicinfo>
				<phone>
					<default>key-id</default>
					<key id = "" value = ""></key>
				</phone>
				<function>
					<notify birthday></notify birthday>
					<notifymiss></notifymiss>
				</function>
			</content>
		</operation>
		<operation type = "detail">
			<id></id>//server make it,client get it by list info
		</operation>
		
	</data>	
	
	<data type = "group">
		<operation type = "list">
			<condition name = "sort" value = "name"></condition>
		</operation>
		<operation type = "add">
			<content>
				<name></name>
				<ring></ring>
			</content>
		</operation>
		<operation type = "delete">
			<content>
				<id></id>
			</content>
		</operation>
		<operation type = "edit">
			<content>
				<id></id>//server make it,client get it by list info
				<name></name>
				<ring></ring>
			</content>
		</operation>
	</data>
	

	
	<data type = "owner">
		<data type = "favorite">
			<operation type = "list">
				<condition name = "sort" value = "time"></condition>
			</operation>
			<operation type = "detail">
				<id></id>
			</operation>
		</data>
	</data>

</request>