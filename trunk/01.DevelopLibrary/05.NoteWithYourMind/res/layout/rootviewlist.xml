<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rootviewlist"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
		<LinearLayout
		android:id="@+id/rootviewlist_toolbar"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@drawable/background_toolbar">
			<ImageButton
				android:id="@+id/rootviewlist_toolbar_newnote"
				style="@style/ToolBarButton"
				android:src="@drawable/toolbar_newnote"/>
			<ImageButton
				android:id="@+id/rootviewlist_toolbar_newfolder"
				style="@style/ToolBarButton"
				android:src="@drawable/toolbar_newfolder"/>
			<ImageButton
				android:id="@+id/rootviewlist_toolbar_search"
				style="@style/ToolBarButton"
				android:src="@drawable/toolbar_search"/>
			<ImageButton
				android:id="@+id/rootviewlist_toolbar_more"
				style="@style/ToolBarButton"
				android:src="@drawable/toolbar_more"/>
			<ImageButton
				android:id="@+id/toolbar_delete"
				style="@style/ToolBarButton"
				android:src="@drawable/toolbar_delete"
				android:visibility="gone"/>
			<ImageButton
				android:id="@+id/toolbar_move"
				style="@style/ToolBarButton"
				android:src="@drawable/toolbar_move"
				android:visibility="gone"/>
			<ImageButton
				android:id="@+id/toolbar_cancel"
				style="@style/ToolBarButton"
				android:src="@drawable/toolbar_cancel"
				android:visibility="gone"/>
		</LinearLayout>
		<ListView 
			android:id = "@+id/rootviewlist_list"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:background="#ebebeb"
			android:layout_above="@id/rootviewlist_toolbar"
		/>
	</RelativeLayout>
	<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/toolbar_more_dlg"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/toolbar_more_dlg"
	android:layout_gravity="right|bottom"
	android:layout_marginBottom="52dp"
	android:layout_marginRight="5dp"
	android:visibility="gone"
	>
		<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/toolbar_more_dlg_Line1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
			<Button
			  android:id="@+id/toolbar_more_dlg_delete"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_marginLeft="5dp"
			  android:layout_marginRight="5dp"
			  android:layout_marginTop="5dp"
			  android:background="@drawable/toolbar_more_delete"
			/>
			<Button
			  android:id="@+id/toolbar_more_dlg_move"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_marginLeft="5dp"
			  android:layout_marginRight="5dp"
			  android:layout_marginTop="5dp"
			  android:background="@drawable/toolbar_more_move"
			/>
			<Button
			  android:id="@+id/toolbar_more_dlg_setpassword"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_marginLeft="5dp"
			  android:layout_marginRight="5dp"
			  android:layout_marginTop="5dp"
			  android:background="@drawable/toolbar_more_lock"
			/>
		</LinearLayout>
		<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/toolbar_more_dlg_Line2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
			<Button
			  android:id="@+id/toolbar_more_dlg_import"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_marginLeft="5dp"
			  android:layout_marginRight="5dp"
			  android:layout_marginTop="5dp"
			  android:text="导入"
			  android:textSize="50sp"
			/>
			<Button
			  android:id="@+id/toolbar_more_dlg_export"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_marginLeft="5dp"
			  android:layout_marginRight="5dp"
			  android:layout_marginTop="5dp"
			  android:text="导出"
			  android:textSize="50sp"
			/>
		</LinearLayout>
	</LinearLayout>
</FrameLayout>
